{
  "manifest_version": 3,
  "name": "遊戯王NEXT",
  "version": "0.3.3",
  "description": "遊戯王Neuron(公式カードデータベース)のデッキ管理を劇的に改善するChrome拡張",
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://www.db.yugioh-card.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.db.yugioh-card.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [ "images/*", "icons/*" ],
      "matches": [ "https://www.db.yugioh-card.com/*" ]
    }
  ]
}

{
  "name": "ygo-deck-helper",
  "version": "0.1.0",
  "description": "遊戯王公式サイトのデッキ管理を快適にするChrome拡張機能",
  "scripts": {
    "build": "tsc && npm run post-build && npm run copy-files",
    "post-build": "node scripts/post-build.js",
    "copy-files": "cp extension/src/manifest.json extension/dist/ && mkdir -p extension/dist/popup && cp src/popup/popup.html extension/dist/popup/",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "yugioh",
    "deck",
    "chrome-extension"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chrome": "^0.0.270",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^22.0.0",
    "cheerio": "^1.1.2",
    "copy-webpack-plugin": "^12.0.0",
    "dotenv": "^17.2.3",
    "html-webpack-plugin": "^5.6.0",
    "playwright": "^1.56.1",
    "ts-loader": "^9.5.0",
    "typescript": "^5.5.0",
    "webpack": "^5.102.1",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "ws": "^8.18.3"
  }
}
